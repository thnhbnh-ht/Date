    <script>
        function moveButton() {
            const noBtn = document.getElementById('noBtn');
            const container = document.getElementById('btnGroup');
            
            // T√≠nh to√°n gi·ªõi h·∫°n ƒë·ªÉ n√∫t kh√¥ng bay ra ngo√†i m√†n h√¨nh qu√° xa
            const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
            const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);

            // G√°n v·ªã tr√≠ m·ªõi cho n√∫t No
            noBtn.style.position = 'fixed';
            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
        }

        function celebrate() {
            document.getElementById('question').style.display = 'none';
            document.getElementById('btnGroup').style.display = 'none';
            document.getElementById('successMsg').style.display = 'block';
            document.getElementById('mainCard').style.backgroundColor = '#bbdefb';
